<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="260dp"/>

    <ImageView
        android:id="@+id/labelkuning"
        android:src="@drawable/loginkuning"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="500dp"/>

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text="Selamat Datang"
        android:fontFamily="@font/poppinsbold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/formdaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/label"
        android:layout_marginTop="20dp"
        android:padding="3dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/txtNama"
                android:background="@drawable/background_putih"
                android:hint="Nama Lengkap"
                android:fontFamily="@font/poppinsregular"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/txtEmail"
                android:background="@drawable/background_putih"
                android:hint="Email"
                android:inputType="text"
                android:fontFamily="@font/poppinsregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/txtPassword"
                android:background="@drawable/background_putih"
                android:hint="Password"
                android:inputType="text"
                android:fontFamily="@font/poppinsregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttdaftar"
        android:layout_below="@+id/formdaftar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="DAFTAR"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:fontFamily="@font/poppinsmedium"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_orange"
        app:backgroundTint="#FD8135"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/buttdaftar"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sudah punya akun?"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:id="@+id/txtMasuk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="Masuk"
            android:textColor="@color/orange"
            android:fontFamily="@font/poppinsregular"/>

    </LinearLayout>


</RelativeLayout>